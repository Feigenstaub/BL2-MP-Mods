<Window x:Class="Patcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="190" Width="519.333">
    <Grid Margin="0,-3,2,1" Height="161" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBoxInputDir" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="C:\Program Files (x86)\Steam\steamapps\common\Borderlands 2" VerticalAlignment="Top" TextChanged="textBox_TextChanged"/>
        <TextBox x:Name="textBoxOutputDir" Height="23" Margin="10,63,10,0" TextWrapping="Wrap" Text="C:\Program Files (x86)\Steam\steamapps\common\Borderlands 2\server" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBoxConsole" Content="Enable console" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,116,0,0" Checked="checkBox_Checked"/>
        <CheckBox x:Name="checkBoxShortcut" Content="Place shortcut on desktop" Margin="176,116,0,0" VerticalAlignment="Top" Checked="checkBox1_Checked" HorizontalAlignment="Left" Width="157"/>
        <CheckBox x:Name="checkBoxDebug" Content="Enable debugging" HorizontalAlignment="Left" Margin="382,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.48,1.461" Checked="checkBox2_Checked"/>
        <Button x:Name="buttonPatch" Content="Patch Borderlands 2" Margin="10,136,10,0" VerticalAlignment="Top" Click="button_Click"/>
        <Button x:Name="buttonChooseInputDir" Content="Choose input directory" Margin="10,38,10,0" VerticalAlignment="Top" Click="button1_Click"/>
        <Button x:Name="buttonChooseOutputDir" Content="Choose output directory" Margin="10,91,10,0" VerticalAlignment="Top" Click="button2_Click"/>
    </Grid>
</Window>
